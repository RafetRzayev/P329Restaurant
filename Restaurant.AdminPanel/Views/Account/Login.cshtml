@using Restaurant.AdminPanel.Models.Identity;
@model LoginViewModel
<div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
            <div class="col-lg-4 mx-auto">
                <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                    <h4>Hello! let's get started</h4>
                    <h6 class="font-weight-light">Sign in to continue.</h6>
                    <div asp-validation-summary="ModelOnly"></div>
                    <form class="pt-3" method="post">
                        <div class="form-group">
                            <input asp-for="UserName" class="form-control form-control-lg" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
                        </div>
                        <div class="my-2 d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <label class="form-check-label text-muted">
                                    <input asp-for="RememberMe" class="form-check-input">
                                    Keep me signed in
                                </label>
                            </div>
                            <a asp-action="forgotPassword" class="auth-link text-black">Forgot password?</a>
                        </div>
                        <div class="text-center mt-4 font-weight-light">
                            Don't have an account? <a asp-action="register" class="text-primary">Create</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>