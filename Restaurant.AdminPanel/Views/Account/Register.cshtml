@using Restaurant.AdminPanel.Models.Identity;
@model RegisterViewModel
<div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
            <div class="col-lg-4 mx-auto">
                <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                    <h4>Hello! let's get started</h4>
                    <h6 class="font-weight-light">Register.</h6>
                    <div asp-validation-summary="All"></div>
                    <form class="pt-3" method="post">
                        <div class="form-group">
                            <input asp-for="UserName" class="form-control form-control-lg" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <input asp-for="Firstname" class="form-control form-control-lg" placeholder="Firstname">
                        </div>
                        <div class="form-group">
                            <input asp-for="Lastname" class="form-control form-control-lg" placeholder="Lastname">
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="ConfirmPassword">
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">REGISTER</button>
                        </div>
                       
                        <div class="text-center mt-4 font-weight-light">
                            Do you have an account? <a asp-action="login" class="text-primary">Sign in</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>