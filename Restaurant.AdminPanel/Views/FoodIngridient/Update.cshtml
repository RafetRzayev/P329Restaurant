@model FoodIngridientUpdateViewModel;
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update food and ingrident relations</h4>
            <h2>@Model.FoodName</h2>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="name">Select for remove from food</label>
                    <select asp-for="RemovedIngridientIds" asp-items="@Model.Ingridents" class="form-control" placeholder="Food"></select>
                    <span asp-validation-for="RemovedIngridientIds" class="text-danger"></span>
                </div>
                @*<button type="submit" class="btn btn-primary mr-2">Remove ingridient</button>*@
                <div class="form-group">
                    <label for="description">Select for add to food</label>
                    <select asp-for="NewIngridentIds" asp-items="@Model.NewIngridents" class="form-control"></select>
                    <span asp-validation-for="NewIngridentIds" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Update</button>
                <a asp-action="index" asp-controller="foodingridient" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>